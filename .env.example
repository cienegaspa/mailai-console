# MailAI Configuration
MAILAI_ENV=dev
MAILAI_DB_PATH=./db/mailai.sqlite
MAILAI_DATA_DIR=./data
MAILAI_INDEX_DIR=./data/index
MAILAI_EXPORT_DIR=./exports
MAILAI_LOG_DIR=./logs

# API Configuration
MAILAI_API_HOST=127.0.0.1
MAILAI_API_PORT=5170
MAILAI_UI_PORT=5171

# Provider Configuration
EMBED_PROVIDER=local
EMBED_MODEL=gte-small
RERANK_PROVIDER=local
RERANK_MODEL=bge-reranker-v2-m3
LLM_PROVIDER=local
LLM_MODEL=llama3.1:8b-q5
PLANNER_USE_API=false
POLISH_WITH_API=false

# Gmail Configuration (real mode)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://127.0.0.1:5170/auth/callback
GOOGLE_SCOPES=https://www.googleapis.com/auth/gmail.readonly

# Mock Mode (set to true for development without credentials)
MAILAI_MOCKS=true

# Vector Store Configuration
VECTOR_STORE_TYPE=faiss
VECTOR_DIM=384

# Rate Limiting
GMAIL_RATE_LIMIT_PER_SECOND=10
LLM_RATE_LIMIT_PER_MINUTE=60

# Security
TOKEN_EXPIRY_HOURS=24